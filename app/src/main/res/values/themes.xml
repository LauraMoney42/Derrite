<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Always Dark Theme -->
    <style name="Theme.derrite" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors (Red for safety only) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>

        <!-- Secondary colors (iOS Blue) -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/accent</item>

        <!-- Surface colors (Dark theme) -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background colors (Dark theme) -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar (Soft dark theme) -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar (Soft dark theme) -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>

        <!-- Text input colors (Dark theme) -->
        <item name="colorControlNormal">@color/border_color</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>

        <!-- Dark theme outline and text field colors -->
        <item name="colorOutline">@color/border_color</item>
        <item name="colorOnSurfaceInverse">@color/text_tertiary</item>

        <!-- Card and elevation styling -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- Dialog styling for dark theme -->
        <item name="alertDialogTheme">@style/DarkAlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/DarkAlertDialogTheme</item>

        <!-- Material components styling -->
        <item name="materialCardViewStyle">@style/WhiteCardStyle</item>
    </style>

    <!-- Updated Dark Alert Dialog Theme with rounded corners -->
    <style name="DarkAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Background and surface colors -->
        <item name="colorSurface">@color/dialog_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/dialog_background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="textColorAlertDialogListItem">@color/text_primary</item>

        <!-- Button colors -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="buttonBarButtonStyle">@style/DarkDialogButton</item>

        <!-- Dialog shape with rounded corners -->
        <item name="shapeAppearanceOverlay">@style/RoundedDialogShape</item>

        <!-- List item styling -->
        <item name="android:listDivider">@null</item>
    </style>

    <!-- Rounded corners for dialog -->
    <style name="RoundedDialogShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Dark dialog button style -->
    <style name="DarkDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/accent</item>
    </style>

    <!-- NoActionBar variant (same as main theme) -->
    <style name="Theme.derrite.NoActionBar" parent="Theme.derrite" />

    <!-- Dark Card Style -->
    <style name="iOSCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Dark Button Styles -->
    <style name="iOSButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>