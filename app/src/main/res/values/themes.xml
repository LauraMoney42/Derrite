<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- iOS-Inspired Theme -->
    <style name="Theme.pinlocal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors (Red for safety only) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>

        <!-- Secondary colors (iOS Blue) -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/accent</item>

        <!-- Surface colors (iOS style) -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background colors (iOS grouped background) -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar (iOS style - light content) -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar (iOS style) -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>

        <!-- Text input colors (iOS style) -->
        <item name="colorControlNormal">@color/border_color</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>

        <!-- iOS-like outline and text field colors -->
        <item name="colorOutline">@color/border_color</item>
        <item name="colorOnSurfaceInverse">@color/text_tertiary</item>

        <!-- Card and elevation styling -->
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <!-- NoActionBar variant (same as main theme) -->
    <style name="Theme.pinlocal.NoActionBar" parent="Theme.pinlocal" />

    <!-- iOS-Style Card -->
    <style name="iOSCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- iOS-Style Button (Primary - Red for Safety) -->
    <style name="iOSButtonPrimary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- iOS-Style Button (Secondary - Blue) -->
    <style name="iOSButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/accent</item>
        <item name="android:textColor">@color/accent</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- iOS-Style Text Button -->
    <style name="iOSButtonText" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- iOS-Style Text Input -->
    <style name="iOSTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/border_color</item>
        <item name="hintTextColor">@color/text_tertiary</item>
    </style>

    <!-- iOS-Style Dialog -->
    <style name="iOSDialogStyle" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>