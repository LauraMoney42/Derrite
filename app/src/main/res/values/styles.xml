<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- White Card Style - Forces white background regardless of theme -->
    <style name="WhiteCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="strokeColor">#E0E0E0</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Dialog Style - Force dark colors -->
    <style name="DialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">#FF000000</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="colorSurface">#FF000000</item>
        <item name="colorOnSurface">#FFFFFFFF</item>
    </style>

</resources>