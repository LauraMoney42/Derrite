<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Red Button Style -->
    <style name="RedButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/primary_dark</item>
    </style>

    <!-- Custom Black Button Style -->
    <style name="BlackButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_secondary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">#333333</item>
    </style>

    <!-- Custom Text Button Style -->
    <style name="CustomTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="rippleColor">#EEEEEE</item>
    </style>

    <!-- Custom White Button Style -->
    <style name="WhiteButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="rippleColor">#EEEEEE</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>