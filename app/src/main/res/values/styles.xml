<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.DerriteIce" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.DerriteIce" parent="Base.Theme.DerriteIce" />

    <!-- Full Screen theme for MainActivity -->
    <style name="Theme.DerriteIce.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Subtle FAB style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">#6C7B7F</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>