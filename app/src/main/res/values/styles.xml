<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dark Card Style - Now uses dark background instead of white -->
    <style name="WhiteCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="android:background">@color/surface</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Dialog Style - Updated for dark theme -->
    <style name="DialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

</resources>