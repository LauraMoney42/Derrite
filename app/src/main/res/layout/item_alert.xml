<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Alert Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Alert Icon -->
            <ImageView
                android:id="@+id/alert_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_report_marker"
                app:tint="@color/alert_red" />

            <!-- Distance -->
            <TextView
                android:id="@+id/text_alert_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="0.2 miles away"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- Time -->
            <TextView
                android:id="@+id/text_alert_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h ago"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- New Badge -->
            <View
                android:id="@+id/new_alert_badge"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/alert_badge"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Alert Content -->
        <TextView
            android:id="@+id/text_alert_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safety concern reported in your area"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Photo Indicator -->
        <LinearLayout
            android:id="@+id/photo_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_camera"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/has_photo"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btn_view_on_map"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/view_on_map"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:background="?attr/selectableItemBackground"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_view_details"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/view_details"
                android:textColor="@color/alert_red"
                android:textSize="12sp"
                android:background="?attr/selectableItemBackground"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>